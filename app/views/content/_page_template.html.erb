<div class="row home_section" style="min-height: 250px; height: 100%;">
	<div class="col-md-1">
		<%= form_for @video, :url => content_left_arrow_path,:format => :js, method: :get, remote: :true, :rel => 'follow' do |f| -%>
			<%= f.hidden_field :name, value: name %>
			<%= button_tag( :class => "side_arrow left") do %>
				<svg width='60px' height='80px' viewBox='0 0 50 80' xml:space='preserve'><polyline fill='none' stroke='black' stroke-width='6' stroke-linecap='round' stroke-linejoin='round' points='45.63,75.8 0.375,38.087 45.63,0.375 '/><polyline fill='none' stroke='#FFFFFF' stroke-width='3' stroke-linecap='round' stroke-linejoin='round' points='45.63,75.8 0.375,38.087 45.63,0.375 '/></svg>
			<% end %>
		<% end %>
	</div>
	<div class="col-md-3  col-xs-7 col-sm-7 hidden-sm hidden-xs" id="mid_left" style="margin-top: 5%; min-height: 150px;">
		<% if type[3] %>
			<%= works_imgs(name, type[3][:key]) %>
		<% end %>
	</div>
	<div class="col-md-4 col-sm-12 col-xs-12 mid_mid you_tube_section" style="min-height: 150px;">
		<div class="loading_page_mid hide">
			<img src='/assets/loading1.gif' class='loading_gif ' height='42' width='42'">
		</div>
		<div class="page_page_mid" style="display: none; min-height: 150px; height: 100%; width:100%; position: absolute;">
		</div>
	</div>
	<div class="col-lg-3 col-md-3 col-xs-7 hidden-sm hidden-xs" id="mid_right" style="margin-top: 5%; min-height: 150px;">
		<% if type[4] %>
			<%= works_imgs(name, type[4][:key]) %>
